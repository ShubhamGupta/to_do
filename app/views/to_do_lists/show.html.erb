<p id="notice"><%= notice %></p>
<h1> <%= @to_do_list.name %> >> Items</h1>
<table border = 1>
<tr>
<th>Subject</th>
<th>Content</th>
<th>Priority</th>
<th>Remind At</th>
<th>Remind On</th>
<th>Actions</th>
</tr>

<% @to_do_list.to_do_items.each do |item| %>
<tr>
<td> <%= item.subject %> </td>
<td> <%= item.content %> </td>
<td> <%= item.priority %> </td>
<td> <%= item.remind_at.strftime("%H:%M:%S")  %> </td>
<td> <%= item.remind_on %> </td>
<td>
	<%= link_to 'Show', to_do_list_to_do_item_path(@to_do_list,item) %>
  <%= link_to 'Edit', edit_to_do_list_to_do_item_path(@to_do_list, item) %>
  <%= link_to 'Destroy', to_do_list_to_do_item_path(@to_do_list, item), confirm: 'Are you sure?', method: :delete %></td>
</td>
</tr>
<% end %>
</table>
<%= link_to 'Add Item', new_to_do_list_to_do_item_path(@to_do_list) %> |
<%= link_to 'Back', to_do_lists_path %>
