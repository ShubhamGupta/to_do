<%= form_for([@to_do_list,@to_do_item]) do |f| %>

  <%= errors_for(@to_do_item, 'cant create the item').html_safe %>
  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, ToDoItem::PRIORITY, prompt: "Priority" %>
  </div>
  <div class="field">
    <%= f.label 'Remind On' %><br />
		<%= date_select :to_do_item, :remind_on, :prompt => {:year => 'Choose year', :month => 'Choose month', :day => 'Choose day'}, :default => nil %>
		</div>
		
		<div class="field">
    <%= f.label 'Remind At' %><br />
		<%= time_select :to_do_item, :remind_at, :prompt => {:hour => 'Choose hour', :minute => 'Choose minute', :second => 'Choose seconds'}, :default => nil %>
		</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
